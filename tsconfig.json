{
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "ES2020",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "rootDir": ".",
      "strict": true,
      
      "forceConsistentCasingInFileNames": true,
      
      "resolveJsonModule": true,
      "types": ["node"]
    },
    "include": ["*.ts"],
    "exclude": ["node_modules", "dist"]
  }